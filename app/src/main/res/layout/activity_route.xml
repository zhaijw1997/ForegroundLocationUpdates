<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MapActivity">
    <!--Attributes definition
        cameraTargetLat&Lng - the initial position of camera
        cameraTilt - the viewing angle of camera
        camera zoom - the range of camera; reference: https://developers.google.com/maps/documentation/android-sdk/views#zoom
        mapstyle - style of map
        uiScrollGestures - move the camera
        uiRotateGestures - rotate the camera(view)
        uiZoomControls - control bar for zooming
        uiZoomGestures - gestures for zooming
        -->
    <Button
        android:id="@+id/displayroute"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Show Route"
        tools:ignore="MissingConstraints" />

    <fragment
        android:id="@+id/map_route"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cameraBearing="112.5"
        app:cameraTargetLat="51.509865"
        app:cameraTargetLng="-0.118092"
        app:cameraTilt="0"
        app:cameraZoom="15"
        app:layout_constraintTop_toTopOf="parent"
        app:mapType="normal"
        app:uiCompass="false"
        app:uiRotateGestures="true"
        app:uiScrollGestures="true"
        app:uiTiltGestures="true"
        app:uiZoomControls="true"
        app:uiZoomGestures="true"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity"
        tools:layout_editor_absoluteX="97dp" />

</androidx.constraintlayout.widget.ConstraintLayout>